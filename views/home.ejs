<%- include('./header.ejs') %> 

<div>
  <section class="section1 mt-3">
    <img
      src="image/home banner.png"
    />
  </section>
  <!--section 1 end-->
  
  <div class="container pt-4 mb-4 ">
   
      <div class="row ">
        <% b.forEach((item)=>{ %>
        <div class="col-4 mb-4 mt-4">
          <div class="card shadow-lg border-0" >
            <div>
                   <img src="<%= item.image.url %>" class="mt-0" style="height: 250px; width: 100%;"/>
            </div>
           
            
              <div class="card-body text-center">
                  <h3><%= item.title %></h3>
                  <br />
                  <p><span><%= item.createdAt.toLocaleDateString() %></span> <br /><br /><%= item.description.slice(0,100) %></p>
                  <br />
          
                  <button class="bg-info"><a href="/readmore/<%= item._id %>">Read More...</a></button>
               
              </div>
          </div>
        </div><% }) %>
      </div>
  
  </div> 
  <!--section 2 end-->
</div>

  <div class="container-fluid gx-0">
    <img src="image/home1.png" width="100%">
  </div>

<%- include('./footer.ejs') %> 