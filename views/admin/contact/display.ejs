<%- include('../../header.ejs') %>

  <!-- sidebar  -->
  <div class="flex my-14 justify-evenly flex-wrap h-screen pt-5">
    <div>
      <ul class="flex flex-col space-y-1 w-72 text-lg">
        <a href="/admin/dashbord" class="bg-[#e5e7eb8a] p-2 hover:bg-black hover:text-white">Dashboard</a>
        <a href="/admin/blog/display" class="bg-[#e5e7eb8a] p-2 hover:bg-black hover:text-white">Blogs</a>
        <a href="/admin/category/display" class="bg-[#e5e7eb8a] p-2 hover:bg-black hover:text-white">Categories</a>
        <a href="/admin/contact/display" class="bg-[#e5e7eb8a] p-2 hover:bg-black hover:text-white">Contact</a>
        <a href="/admin/about/display" class="bg-[#e5e7eb8a] p-2 hover:bg-black hover:text-white">About</a>
        <a href="/logout" class="bg-[#e5e7eb8a] p-2 hover:bg-black hover:text-white">Logout</a>
      </ul>
    </div>

    <div class="w-3/5">
      <div class="flex justify-between mb-4">
        <div>
          <h1 class="text-3xl font-medium">Contact List</h1>
        </div>
        <div>
          <!-- Button trigger modal -->
          <!-- <button type="button" class="btn btn-success bg-green-500 text-white" data-bs-toggle="modal"
            data-bs-target="#exampleModal">
            Add Contact
          </button> -->
        </div>
      </div>
      <table class="table table-bordered">
        <thead class="table-light">
          <tr>
            <th scope="col">S.No</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Message</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% i=1 %>
            <% d.forEach((item)=>{ %>
              <tr>
                <th scope="row">
                  <% i++ %>
                </th>
                <td>
                  <% item.name %>
                </td>
                <td>
                  <% item.email %>
                </td>
                <td>
                  <% item.phone %>
                </td>
                <td>
                  <% item.message %>
                </td>
                <td class="space-x-3">
                  <a href="/contactview/<%= item._id %>">
                    <i class="fa-solid fa-eye"></i>
                  </a>
                  <a href="/contactedit/<%= item._id %>">
                    <i class="fa-solid fa-pen-to-square text-blue-500"></i>
                  </a>
                  <a href="/contactdelete/<%= item._id %>">
                    <i class="fa-solid fa-trash-can text-red-500"></i>
                  </a>
                </td>
              </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>

