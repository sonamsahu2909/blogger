<%- include('./header.ejs') %>
  <!-- profile -->
  <!-- <h1>profile</h1> -->
  <div class="container-fluid mb-4 pb-5" style="background-color: #d1e9ed;">
    <div class="container text-dark text-white h-30" style="background-color: #d1e9ed;">
      <section class="h-100 gradient-form" style="background-color: white;">
        <div class="container py-5 h-100" style="background-color: #d1e9ed;">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-7 mt-5 pt-5">
              <div class="card rounded-3 text-dark">
                <div class="row g-0">
                  <% if(error.length > 0){ %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                  <% } %>
                  <% if(message.length > 0){ %>
                    <div class="alert alert-success">
                        <%= message %>
                    </div>
                  <% } %>
  
                  <div class="col-lg-12 bg-light rounded-4 ">
                    <div class="container">
                      <div class="card-body p-md-5 mx-md-5 mb-5 pb-5">
  
                        <div class="text-center  txt-green">
                          <img src="<%= image.url %>" style="width: 28%; height:130px;position: relative;left: 170px; border-radius: 100px; border: 4px solid white;" alt="logo" >
                          <h4 class="mt-2 mb-2 "><b><%= n %></b></h4>
                          <p class="mb-2"><%= e %></p>
                          <div style="font-size:35px; display: flex; gap: 20px; justify-content: center; " class="mb-3 txt-green">
                            <i class="fab fa-facebook-f "></i>
                            <i class="fa-brands fa-instagram"></i>
                            <i class="fab fa-twitter"></i>
                            <i class="fa-brands fa-linkedin"></i>
                          </div>
                          <div class="row">
                            <div class="col-md-6">
                              <button data-bs-toggle="modal" data-bs-target="#change_password" class="btn btn-warning bg-green border-0 rounded-5 form-control">change password</button>
                              
                            </div>
                            <div class="col-md-6">
                             
                              <button data-bs-toggle="modal" data-bs-target="#change_profile" class="btn btn-warning  bg-green border-0 rounded-5 form-control">change profile</button>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>

  <!-- change password modal -->
  <div class="modal fade" id="change_password">
    <div class="modal-dialog modal-lg"> <!--modal-xl,sm,lg--->
      <div class="modal-content bg-transparent border-0">
        <div class="modal-header">
          <h5 class="modal-title  bg-transparent"></h5>

          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

        </div><!---modal header end--->
        <div class="modal-body bg-white ">
          <form action="/change_password" method="post" class="p-2">
            <div class="mb-3">
              <input type="text" value="" name="oldpassword" class="form-control"
                placeholder="enter your old password">
            </div>
            <div class="mb-3">
              <input type="text" value="" name="newpassword" class="form-control"
                placeholder="enter your new password">
            </div>
            <div class="mb-3">
              <input type="text" value="" name="cpassword" class="form-control"
                placeholder="enter your confirm password">
            </div>
            <button type="submit" class="btn btn-secondary bg-primary ">Submit</button>

          </form>
        </div><!-- modal body--->
      </div><!---model dialog--- end=--->
    </div>
  </div>
  <!---modal end--->

  <!-- profile update modal -->
  <div class="modal fade" id="change_profile">
    <div class="modal-dialog modal-lg pt-5 mt-5"> <!--modal-xl,sm,lg--->
      <div class="modal-content bg-white border-0 ">
        <div class="modal-header">
          <h5 class="modal-title ">Update Profile</h5>

          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

        </div><!---modal header end--->
        <div class="modal-body bg-white ">
          <form action="/profile_update" enctype="multipart/form-data" method="post" class="p-2">
            <div class="mb-3">
              <span>Name</span>
              <input type="text" value="<%= n %>" name="name" class="form-control"placeholder="Name" required>
            </div>
            <div class="mb-3">
              <span>Email</span>
              <input type="email" value="<%= e %>" name="email" class="form-control" placeholder="email" required>
            </div>
            <div class="mb-3">
              <span>Image</span>
              <input type="file"  name="image" class="form-control">
              <img src="<%= image.url %>" style="width: 20%; height:130px; border-radius: 100px; border: 4px solid white;" alt="logo" >
            </div>
            <button type="submit" class="btn btn-secondary bg-primary ">Submit</button>

          </form>
        </div><!-- modal body--->
      </div><!---model dialog--- end=--->
    </div>
  </div>
  <!---modal end--->




  <%- include('./footer.ejs') %>