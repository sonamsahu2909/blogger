<%- include("./header.ejs") %>


    <section class="section6 mt-5 pt-4 container-fluid">
        <div class=" container ">

            <div class="row">
                <div class="col-3">

                </div>
                <div class="col-6">
                    <div class="text row mb-2">

                        <h2>Register Here</h2>
                    </div>
                    <% if(error.length> 0){ %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } %>



                            <form action="/insert" enctype="multipart/form-data" method="post"
                                onsubmit="return validation()">
                                <div class="form-outline mb-3">
                                    <input name="name" type="type" id="user" class="form-control"
                                        placeholder="Full name" required>
                                    <span id="username" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-3">
                                    <input name="email" type="email" id="email" class="form-control" placeholder="Email"
                                        required>
                                </div>

                                <div class="form-outline mb-3">
                                    <input name="password" type="password" id="pass" class="form-control"
                                        placeholder="password" required>
                                    <span id="password" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-3">
                                    <input name="cpassword" type="password" id="cpass" class="form-control"
                                        placeholder="Confirm password" required>
                                    <span id="cpassword" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-3">
                                    <input name="image" type="file" class="form-control">
                                </div>

                                <div class="d-flex justify-content-end">

                                    <button type="submit" class="btn btn-primary bg-blue-500">
                                        Sign Up
                                    </button>
                                </div>
                                <div class="other">
                                    <h5>HAVE AN ACCOUNT?</h5>
                                    <a href="/login">sign in</a>
                                </div>
                            </form>

                </div>
                <div class="col-3">

                </div>

            </div>




        </div><!--main div end-->
    </section><!--section 6 end-->



    <%- include("./footer.ejs") %>